
<div class="container mt-3">
  <div class="row">
        <% @rooms.each do |room| %>

          <div class="col-sm-6 col-md-4 col-lg-3">
            <%= link_to room_path(room) do %>
              <div class="cardContainer">
                <img class="card-img-top img-fluid" src="https://source.unsplash.com/400x300/?bedrooms&rand=<%= rand( 9999) %>" />
                <div class="card-body">
                    <h4 class="card-title"><%= room.name %></h4>
                    <p class="card-text"> <%= room.city %></p>
                    <p class="card-trip-pricing">â‚¬<%=  number_with_precision(room.price, precision: 2) %>/night</p>
                </div>     
              </div>
            <% end %>
          </div>
        <% end %> 
    </div>
  </div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>


</div>
