 <%= simple_form_for @room do |f| %>
     <%= f.input :name, as: :string, required: true, label: "Property Name" %>
     <%= f.input :description, as: :text, required: true, placeholder: "Single room in quiet family home" %>
 
  <%= f.input :price, as: :decimal, required: true, label: "Price (Â£)",  placeholder: "25.50", input_html: { value: number_with_precision(f.object.price, precision: 2) }  %>

     <%= f.input :street, as: :string, required: true %>
     <%= f.input :city, as: :string, required: true %>
     <%= f.input :guest_nr, as: :integer, required: true, label: "Number of Guests" %>

  
    <%= f.input :photo, as: :file,label: "Add a picture", label_html: {class: "label_form"}   %>


     <% if controller_name == 'rooms' && action_name == 'new' %>
        <%= f.button :submit, "Add Room", class: "btn btn-primary" %>
      <% elsif controller_name == 'rooms' && action_name == 'edit' %>
        <%= f.button :submit, "Save Changes", class: "btn btn-primary" %>
      <% end %>
    <% end %>