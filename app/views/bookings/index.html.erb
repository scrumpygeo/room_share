<h1>Room Bookings here</h1>

<% @bookings.each do |booking| %>

  <p><%= booking.room.name %> : <%= booking.start_date %> - <%= booking.end_date %>. Status: <%= booking.status %>

  <% if booking.status == 'Pending' %>
    <%= link_to "Delete", booking_path(booking), method: :delete, data: { confirm: 'Deleting. Are you sure?'}, class: "text-danger"  %>
  <% end %>
  </p>
<% end %>