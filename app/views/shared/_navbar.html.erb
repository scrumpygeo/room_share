<div class="navbar navbar-expand-sm navbar-light navbar-ham sticky-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "hat.png" %>
    <% end %>



  <div class="search-bar">
    <div  class="form-inline padded">
      <%= simple_form_for :search,  wrapper: :inline_form, method: :get, url: rooms_path,  class: 'form-inline' do |t| %>
        <%= t.input :city,  label: false, input_html: { value: "", class:"form-control border-radius input", placeholder: "Cricklewood" } %>
        <%= t.submit "Search", class: "btn btn-primary" %>
      <% end %> 
    </div>
    </div>



  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Bookings", bookings_path, class: "nav-link" %>
        </li>

      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Hosts
        </a>
        <div class="dropdown-menu  dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Add a Room", new_room_path, class: "nav-link mr-1" %>
          <%= link_to "List Properties", dashboards_path, class: "nav-link mr-1" %>
        </div>
      </li>     

        <li class="nav-item dropdown">
        <% unless current_user.photo.attached? %>
          <%= image_tag "avatar", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
         <% else %> 
       <%= cl_image_tag current_user.photo.key, height: 40, width: 40, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
          
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">


                    <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
          <% end %>

           <%= link_to destroy_user_session_path, class: "dropdown-item", method: :delete do %>
            <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>

          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
