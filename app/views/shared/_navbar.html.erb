<div class="navbar navbar-expand-sm navbar-light navbar-ham sticky-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>

  <div class="search-bar">
    <div  class="form-inline padded">
      <%= simple_form_for :search,  wrapper: :inline_form, method: :get, url: rooms_path,  class: 'form-inline' do |t| %>
        <%= t.input :city, as: :string,  label: false, input_html: { class:"form-control border-radius input", placeholder: "Cricklewood" } %>
        <%= t.input :start_date, as: :string, label: false, input_html: { id: "start_date"}, placeholder: "Start Date" %>
        <%= t.input :end_date, as: :string, label: false, input_html: { id: "end_date"},  placeholder: "End Date" %>
         <%= t.input :guests, as: :integer, label: false, input_html: { id: "guest_num", maxLength: 2, min: 1, style: 'width: 110px'},  placeholder: "Guests" %>
        <%= t.submit "Search", class: "btn btn-primary" %>
      <% end %> 
    </div>
    </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Bookings", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "hat", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Home", root_path, class: "dropdown-item" %>
            <%= link_to "Profile", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
